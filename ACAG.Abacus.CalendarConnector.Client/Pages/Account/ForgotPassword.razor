@page "/ForgotPassword"
@inject IStringLocalizer<Resource> _localizer;
@inject NavigationManager _navigationManager
@inject IApiWrapper _apiWrapper
@inject IAuthService _authService
@layout LoginLayout

<hr />

<link href="css/logincss.css" rel="stylesheet" />
<div class="container">
    <main role="main" class="pb-3">
        <div class="login-div">
            <div class="login-container">
                <div class="login-content">

                    <h1>@_localizer[LangKey.FORGOT_PASSWORD_TITLE]</h1>
                    <h4>@_localizer[LangKey.ENTER_YOUR_EMAIL]</h4>

                    @if (ShowErrors)
                    {
                        <div class="alert alert-danger" role="alert" style="word-wrap: break-word">
                            <p>@_localizer[Error]</p>
                        </div>
                    }

                    <EditForm EditContext="_editFormContext" OnSubmit="HandleOnSubmitAsync">
                        <DataAnnotationsValidator />

                        <div class="form-group">
                            <label for="email">@_localizer[LangKey.EMAIL_ADDERESS]</label>
                            <InputText Id="email" Class="form-control" @bind-Value="_forgotPassword.Email" @onfocusout="OnFocusOutEmail" />
                            <ValidationMessage For="@(() => _forgotPassword.Email)" />
                        </div>
                        <button type="submit" class="btn btn-primary">@_localizer[LangKey.SUBMIT]</button>
                    </EditForm>

                </div>
            </div>
        </div>
    </main>
</div>

